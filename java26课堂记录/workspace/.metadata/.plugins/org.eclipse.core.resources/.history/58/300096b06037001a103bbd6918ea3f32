package com.zhiyou100.day10;

public class LianXi3 {

	
    
    public static void main(String[] args) {
    	for (int i = 1; i < 10; i++) {
    		getWang(i);
		}
    	  
    }
   //写一个方法 判断参数数组 是否包含参数元素  如果包含 返回第一次出现的位置  如果不包含 返回-1
    public static int  getIndex(int[] arr,int n) {
    	//定义变量记录n的位置
    	int index=-1;
    	//遍历数组
    	for (int i = 0; i < arr.length; i++) {
			if(arr[i]==n) {//如果当前元素等于n  就记录当前元素的位置
				index=i;
				break;
			}
		}
    	return index;
    }
    //用一个boolean数组装所有的猴子  初始值是false    如果被淘汰 就把值更改为true
    //剩最后一个false时  此猴子就是大王
    public static void  getWang(int n) {
    	//创建一个boolean 数组 装n个猴子
    	boolean[] arr=new boolean[n];//都是false
    	int geShu=0;//定义变量记录被淘汰的猴子的个数
    	int  num=0;//记录报数
    	while(true) {//循环报数
    		//遍历猴子
    		for (int i = 0; i < arr.length; i++) {
				  //判断猴子是否有资格报数
    			if(arr[i]==false) {
    				num++;
    				if(num==7) {
    					//当前猴子被淘汰
    					arr[i]=true;
    					geShu++;
    					//把num设置为0
    					num=0;
    					//判断猴子个数是否为1
    					if(geShu==arr.length-1) {
    						break;
    					}
    				}
    			}
			}
    		//判断猴子个数是否为1
			if(geShu==arr.length-1) {
				break;
			}
    	}
    	//遍历数组
    	for (int i = 0; i < arr.length; i++) {
			System.out.print(arr[i]+(i==arr.length-1?"\n":","));
		}
    	
    }
    
    
}
