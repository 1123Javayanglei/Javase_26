        double pjs=qiuPJS();
        System.out.println("获取1到100内所有质数的平均值="+pjs);
        print99();
        
        int[] arr= {1,4,6,7,8,0,2,3,1};
        printArr(arr);
        arr=sort(arr);
        printArr(arr);

	}
