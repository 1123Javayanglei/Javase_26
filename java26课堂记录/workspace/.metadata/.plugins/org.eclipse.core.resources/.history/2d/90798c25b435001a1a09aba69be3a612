package com.zhiyou100.day08;

public class Demo1_OOP3 {

	public static void main(String[] args) {
		//2 在主方法中 根据类创建对象
		Car c1=new Car();
		
		//3 给对象的变量赋值
		c1.color='红';
		c1.carID="豫A55555";
		c1.logo="BMW";
		c1.money=1000000;
		c1.speed=90;
		
		//4 调用对象的方法
		c1.run();
		c1.show();
		
		//注意事项5：一个源文件中可以定义多个类  但只能有一个public修饰的类  并且此类的名字必须和源文件名字一致
		
		//注意事项6：所有的变量和方法都是通过对象来调用的
		
		//注意事项7：调用方法时 如果方法定义了参数列表 必须传递参数  如果方法定义了返回值   可以选择性接受返回值
		int sum=c1.add(1, 2);
		c1.add(1, 2);
		System.out.println("1+2="+sum);//1+2=3
		
	}
}
