package com.zhiyou100.day08;

public class Demo1_OOP2 {

	public static void main(String[] args) {
		 //2 根据类创建对象
		 Person p1=new Person(); 
         //3 给对象的变量赋值
		 //为什么p1这个对象 会有name age 变量呢
		 //p1这个对象拥有那些数据 取决于Person类中定义了那些变量
		 //p1这个对象拥有那些功能  取决于Person类中定义了那些方法
		 p1.name="习近平";
		 //p1.age=65;
		 p1.job="中华人名共和国主席";
		 p1.sex='男';
		 
		 //注意事项1:一类可以创建多个对象  每个对象都是独立的个体
		 //       每个对象都拥有一套类中定义的属于本对象的所有变量和方法
		 Person p2=new Person();//又创建一个Person类型的对象
		 //注意事项2：对象中的变量有默认初始值：初始值取决于变量的类型：
		 //        基本数据类型默认值都是 对应类型的0
		 //        boolean是false 
		 //        引用数据类型对应的是null
		 
		 //注意事项3：一个对象可以有多个名字：可以通过多个名字来操作一个对象
		 Person p3=p2;//让对象名p3指向对象名p2指向的对象：给19行的对象又起个名字p3
		 //p1=p2;//让p1指向19行的对象  p1与第7行的对象没有关系了
		 
		 
		 //4 调用对象的方法
		 p1.eat("黄焖鸡");
		 p1.show();
		 p2.show();
	}
}
//1 创建一个类描述人的类型
class Person{
	 //通过变量来表示表面的数据	
	 //注意事项4：在类中给变量赋值 其实给此类创建的所有对象的此变量设置默认初始值
	 int age=19;
	 long index;
	 boolean isDY;
	 double height;
	 char sex;
	 String name;
	 String job;
	 int[] arr;
	 //通过方法来表示动态的功能
	 // 在面向对象中的方法 不要再加修饰符static
	 public void eat(String foodName) {
		 //类中定义的变量 在所有的方法中都可以调用
		 System.out.println(name+"正在吃"+foodName+"饭");
	 }
	 public void show() {
		 //打印输出语句中的字符串拼凑:字符串和变量的连接
		 //变量前后必须有+作为连接符    字符串必须写在双引号中
		 System.out.println("我叫"+name+",今年"+age+"岁,职位是"+job+",性别是"+sex+",身高是"+height+"米,是党员吗？"+isDY+",编号是"+index+",数组"+arr);
	 }
}
