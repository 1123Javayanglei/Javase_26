package com.zhiyou100.day07;

public class Demo2_OOP1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
// 创建一类：：描述人这个类型
class Person{
	//在类中通过变量来表示表面的数据 
	//表面数据：年龄 性别 名字  身高  职位
	int age;
	char sex;
	String name;//String表示字符串类型
	double height;
	String job;
	//通过方法来表示动态的功能   注意：在oop中方法修饰符不再加static
	//吃饭  自我介绍  跑步
	public void eat(String foodName) {
		System.out.println(name+"正在吃"+foodName);
	}
	public void show() {
		System.out.println("我叫"+name+",今年"+age+"岁,身高"+height+"米,性别"+sex+",职位是"+job);
	}
	public void run() {
		System.out.println(name+"正在跑步!!!");
	}
	
}
