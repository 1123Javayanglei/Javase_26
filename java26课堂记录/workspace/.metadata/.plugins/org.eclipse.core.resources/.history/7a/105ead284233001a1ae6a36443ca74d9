package com.zhiyou100.day07;

public class ZuoYe1 {

	public static void main(String[] args) {
//		 1   创建一个int类型的二维数组并给元素赋值   求所有元素的平均值	
		 int[][] arr1= {{1,3,5,7,0},{2,4,5},{1,34,23,1,2},{1,4}};//创建一个二维数组并起个名字
		 double sum=0;//定义变量记录和
		 int geShu=0;
		 //遍历二维数组
		 for (int i = 0; i < arr1.length; i++) {//遍历二维数组中的一维数组
			for (int j = 0; j < arr1[i].length; j++) {//当前一维数组中的所有元素
				//当前元素是arr1[i][j]
				sum+=arr1[i][j];
			}
			geShu+=arr1[i].length;
		}
		 System.out.println("平均值是："+sum/geShu);
		 
		 
//		 2   创建一个int类型的二维数组并给元素赋值   求每个一维数组的平均值 
		 int[][] arr2= {{1,3,5,7,0},{2,4,5},{1,34,23,1,2},{1,4}};
		 //遍历二维数组
		 for (int i = 0; i < arr2.length; i++) {//遍历二维数组中的一维数组
			 //定义变量记录当前一维数组的元素和
			double sum2=0;
			for (int j = 0; j < arr2[i].length; j++) {//当前一维数组中的所有元素
				//当前元素是arr2[i][j]
				sum2+=arr2[i][j];
			}
			System.out.println("当前一维数组的平均值是："+sum2/arr2[i].length);
		 }
		 
		 
//		 3   把两种排序方法好好理解清楚  代码要熟记
		 int[] arr3= {1,4,8,9,0,23,1,2};
		 //打印数组
		 for (int i = 0; i < arr3.length; i++) {
			 System.out.print(arr3[i]+(i==arr3.length-1?"\n":"\t"));
		 }
		 //顺序排序
		 for (int i = 0; i < arr3.length; i++) {
			  
		 }
//		 4   通过循环证明：所有大于等于4 小于1000的偶数都可以被拆分为两个质数的和
//		           如：6=3+3  8=3+5
//		 5  留下你的宝贵意见
//		 扩展题1：
//		    通过二维数组实现杨辉三角
//		    杨辉三角
//			1
//			1	1
//			1	2	1
//			1	3	3	1
//			1	4	6	4	1
//			1	5	10	10	5	1
//			1	6	15	20	15	6	1
//		 扩展题2：
//		    验证角谷猜想：
//		         任给一个自然数，若为偶数除以2，若为奇数则乘3 加1，
//		         得到一个新的自然数后按照上面的法则继续计算，
//			     若干次后得到的结果必然为1。
//		         写一个方法 请求出10到1000内的所有数 经过运算得到1时 各需要的多少步

	}

}
