package com.zhiyou100.day10;

public class LianXi2 {

	
    
    public static void main(String[] args) {
        
    }
    //黑洞
    public static void heiDong() {
    	//定义变量 让其把所有的四位数跑完
        for (int n = 1000; n < 10000; n++) {
			//排除四个位数完全相同：1111 2222 3333 
        	if(n%1111==0) {
        		continue;//继续n++ 
        	}
        	//求n进行黑洞的次数
        	int ciShu=0;
        	//定义变量记录n当前的值
        	int k=n;
        	while(true) {
        		if(k==6174) {
        			break;//结束本层循环
        		}
        		//获取k各个位数的值
        		int a=k%10;
        		int b=k/10%10;
        		int c=k/100%10;
        		int d=k/1000;
        		
        	}
        	
        	
		}
    }
    
    
    
    
   
}
