package com.zhiyou100.day06;

public class PaiXu1_ShunXu {

	public static void main(String[] args) {
		//两个变量互换值
//		int a=12,b=3;
//		System.out.println("a="+a+",b="+b);
//		int k=a;//a=12 b=3 k=12
//		a=b;//a=3 b=3 k=12
//		b=k;//a=3 b=12 k=12
//		System.out.println("a="+a+",b="+b);
//		a=12;b=3;
//		a=a+b;//a=15  b=3
//		b=a-b;//a=15  b=12
//		a=a-b;//a=3   b=12
//		System.out.println("a="+a+",b="+b);
		
		
		
		//顺序排序：：：依次拿当前元素和其后面的所有元素做比较
		int[] arr= {1,5,1,9,0,3};
		for (int i = 0; i < arr.length-1; i++) {
			for (int j = i+1; j < arr.length; j++) {
				 System.out.print();
			}
			System.out.println();
		}
		
		
		for (int i = 0; i < arr.length; i++) {
			System.out.print(arr[i]+(i==arr.length-1?"\n":","));
		}
		for (int i = 0; i < arr.length-1; i++) {
			for (int j = i+1; j < arr.length; j++) {
				  //当前元素是arr[i]    当前元素后面的元素是arr[j]
				  //把大的排在左边 
				  if(arr[i]<arr[j]) {
					   int k=arr[i];
					   arr[i]=arr[j];
					   arr[j]=k;
				  }
			}
		}
		for (int i = 0; i < arr.length; i++) {
			System.out.print(arr[i]+(i==arr.length-1?"\n":","));
		}
		
	}

}
