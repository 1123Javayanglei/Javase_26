//在类中直接定义的变量---成员变量
//在方法中定义的变量----局部变量
class Demo{
	int a=10;//成员变量a
	int b=12;//成员变量b
	public void test1(int c) {//局部变量c
		int d=12;//局部变量d
		for (int i = 0; i <5; i++) {//局部变量i
			
		}
	}
}
