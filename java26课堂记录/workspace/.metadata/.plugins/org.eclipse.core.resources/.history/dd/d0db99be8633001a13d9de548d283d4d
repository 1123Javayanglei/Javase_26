// 创建一类：：描述人这个类型
class Person{
	//在类中通过变量来表示表面的数据 
	//表面数据：年龄 性别 名字  身高  职位
	int age;
	char sex;
	String name;//String表示字符串类型
	double height;
	String job;
	//通过方法来表示动态的功能
}
