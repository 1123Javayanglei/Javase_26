package com.zhiyou100.day08;
public class Demo1_OOP5_Constructor {

	public static void main(String[] args) {
		/*构造方法、构造器：用于构建创造对象的方法
		 *
		 * 
		 * 
		 * */
		//创建对象
		Teacher t1=new Teacher();
		//创建对象并起个名字的格式：对象类型 引用名=new 对象类型();
		//给对象的属性赋值
		t1.age=28;
		t1.name="韩梅梅";
		//调用对象的方法
		t1.show();
		
	}
}
class  Teacher{
	//创建一个构造方法：无参数的构造方法
	public void Teacher() {
		System.out.println("public void Teacher() ");
	}
	int age=29;
	String name;
	public void show() {
		System.out.println("age="+age+",name="+name);
	}
} 
