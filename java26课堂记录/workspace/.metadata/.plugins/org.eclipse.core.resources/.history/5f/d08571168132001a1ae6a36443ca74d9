package com.zhiyou100.day06;

public class ZuoYe2 {

	public static void main(String[] args) {
		//获取某个位数上的值  通过/和%的组合即可
//		6   获取1到1000内满足条件的数的平均值： 
//		        条件 ---必须是质数  并且 位数上含有0
		//定义变量记录和和个数
		int geShu=0;double sum=0;
		//使用循环让一个变量从1跑到1000
		for (int n = 1; n <=1000; n++) {
			   //判断当前n是不是满足条件的质数
			   //判断是不是位数含有0
			   boolean boo=false;
			  
			   int c=n/100%10;
			   int d=n/1000;   
			   if(n<10) {
				   int a=n%10;
				   if(a==0) {boo=true;}
			   }else if(n<100) {
				   int a=n%10;
				   int b=n/10%10;
				   if(a*b==0) {boo=true;}
			   }else if(n<1000) {
				   int a=n%10;
				   int b=n/10%10;
				   if(a*b==0) {boo=true;}
			   }
		}
		
		
//		扩展题1： 判断一个数是不是完数
//		       完数：n的所有因子之和等于n 那么n就是完数
//		       因子：m可以除尽n m就是n的因子   但n不是n的因子
//		       如：6的因子是 1  2  3  相加之和=6  所以6是完数
//		           10的因子是 1 2 5  相加之和=8  所以10不是完数

	}

}
