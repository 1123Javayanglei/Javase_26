package com.zhiyou100.day08;
public class Demo1_OOP4_OverLoad {

	public static void main(String[] args) {
		  Student  s1=new Student();
		  int sum1=s1.add(1, 2);
		  sum1=s1.add(2);
		  double sum2=s1.add(1, 1.1);
		  sum2=s1.add(11.1, 1);
		  sum1=s1.add(1, 2, 3);
		  
		  //System.out.println("sum1="+sum1);
	      /*
	       * 方法重载：同一个类中几个方法  方法名相同 参数列表不同的现象
	       *        参数列表不同： 参数个数不同
	       *                 参数类型不同
	       *                 参数顺序不同
	       *        重载的方法 方法名相同：这几个方法的基本功能相同
	       *        调用者具体调用的是哪个方法  取决于参数列表
	       *        方法重载：类似于 同卵双胞胎
	       *                  
	       *        方法重载要求：
	       *             1  必须同一个类
	       *             2 方法名必须相同  
	       *             3 参数列表必须不同   ：参数个数不同 参数类型不同 参数顺序不同
	       *         对修饰符没有要求：    
	       * 
	       * */
		
	}
}
class  Student{
	//求和：求两个int的和
	public int  add(int a,int b) {
		System.out.println("两个int参数！！");
		return a+b;
	}
	
	//求和：求三个int的和
	public int  add(int a,int b,int c) {
		System.out.println("三个int参数！！");
		return a+b+c;
	}
	//求和：求一个int和一个double的和
	public double add(int a,double b) {
		System.out.println("一个int 一个double");
		return a+b;
	}
	//求和：求一个int和一个1的和
	public int add(int a) {
		System.out.println("一个int");
		return a+1;
	}
	//求和：求一个int和一个1的和
	public double add(double a,int b) {
	    System.out.println("一个double,一个int");
		return a+b;
	}
} 
