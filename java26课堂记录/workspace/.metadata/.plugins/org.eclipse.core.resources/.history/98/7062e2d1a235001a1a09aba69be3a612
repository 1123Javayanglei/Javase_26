package com.zhiyou100.day08;

public class Demo1_OOP1 {

	public static void main(String[] args) {
		

	}
}
//1 创建一个类描述人的类型
class Person{
	 //通过变量来表示表面的数据
	 int age;
	 char sex;
	 String name;
	 String job;
	 //通过方法来表示动态的功能
	 // 在面向对象中的方法 不要再加修饰符static
	 public void eat(String foodName) {
		 //类中定义的变量 在所有的方法中都可以调用
		 System.out.println("");
	 }
}
