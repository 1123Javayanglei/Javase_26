package com.zhiyou100.day10;

public class LianXi2 {

	
    
    public static void main(String[] args) {
    	heiDong();
    }
    //1100 ---0011  1100   1089
    //黑洞
    public static void heiDong() {
        for (int n = 1000; n < 10000; n++) {//定义变量 让其把所有的四位数跑完
        	if(n%1111==0) {//排除四个位数完全相同：1111 2222 3333 
        		continue;//继续n++ 
        	}
        	//求n进行黑洞的次数
        	int ciShu=0;
        	//定义变量记录n当前的值
        	int k=n;
        	while(true) {
        		if(k==6174) {
        			break;//结束本层循环
        		}
        		//获取k各个位数的值
        		int a=k%10;
        		int b=k/10%10;
        		int c=k/100%10;
        		int d=k/1000;
        		//把四个数装入数组中 分别排序
        		int[] arr= {a,b,c,d};
        		//对数组排序 正序：  1 3  4  6
        		sort(arr);
        		//获取最大值
        		int max=arr[3]*1000+arr[2]*100+arr[1]*10+arr[0]*1;
        		int min=arr[3]*1+arr[2]*10+arr[1]*100+arr[0]*1000;
        		//获取差
        		k=max-min;
        		ciShu++;
        	}
        	System.out.println(n+"：：："+k+"   次数是："+ciShu);
		}
    }
    //写一个方法 对数组排序
    public static void sort(int[] arr) {
    	for (int i = 0; i < arr.length-1; i++) {
			for (int j = i+1; j < arr.length; j++) {
				if(arr[i]>arr[j]) {
					int k=arr[i];
					arr[i]=arr[j];
					arr[j]=k;
				}
			}
		}
    }
    
}
